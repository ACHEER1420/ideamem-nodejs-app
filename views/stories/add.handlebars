<h1>Add Story</h1>
<div class="row">
  <form action="/stories/add" method="POST" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title">
        <label for="title">Title</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <select name="status">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="draft">draft</option>
        </select>
        <label for="status">Status</label>
      </div>
    </div>
    <div class="row">
      <p>
        <label>
          <input type="checkbox" name="allowComments" id="filled-in-box"
            class="filled-in" />
          <span>Allow Comments</span>
        </label>
      </p>
    </div>
    <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story:</h5>
        <textarea name="body" rows="40"></textarea>
      </div>
    </div>
    <input type="submit" class="btn" value="Save">
  </form>
</div>